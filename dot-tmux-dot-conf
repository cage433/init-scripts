# act like vim
#set-option -g default-shell /usr/bin/zsh
set-option -g default-shell /bin/bash
setw -g mode-keys vi
bind-key -ct vi-edit up history-up
bind-key -ct vi-edit down history-down
bind-key h select-pane -L
bind-key j select-pane -D
bind-key k select-pane -U
bind-key l select-pane -R

bind-key -n C-right resize-pane -R 5
bind-key L resize-pane -R 5
bind-key -n C-left resize-pane -L 5
bind-key H resize-pane -L 5
bind-key -n C-down resize-pane -D 5
bind-key J resize-pane -D 5
bind-key -n C-up resize-pane -U 5
bind-key K resize-pane -U 5

# "Send-keys is asynchronous - hence the nests tmux call
bind-key C send-keys "clear && tmux clear-history" \; send-keys "Enter" 


#reload
bind-key r source-file ~/.tmux.conf\; display-message "Reloaded"

# act like GNU screen
unbind C-b
set -g prefix C-a

set -g default-terminal "screen"

# Don't prompt before killng pane
unbind x
bind x kill-pane 

# Move to beginning of line
bind a send-prefix

# 'maximise' and 'minimise' a pane
unbind +
bind + new-window -d -n tmux-zoom \; swap-pane -s tmux-zoom.0 \; select-window -t tmux-zoom
unbind -
bind - last-window \; swap-pane -s tmux-zoom.0 \; kill-window -t tmux-zoom

set -g status-bg red
set -g status on
bind-key b set-option status

set -g history-limit 10000
source-file ~/.tmux.local.conf

# Set status bar
set -g status-bg black
set -g status-fg white
set -g status-left ‘#[fg=green]#H’
set -g pane-active-border-fg yellow
setw -g window-status-current-bg blue
setw -g window-status-current-fg white

set-window-option -g window-status-current-bg blue
set-window-option -g automatic-rename off
